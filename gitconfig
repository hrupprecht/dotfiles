[user]
	email = holger.rupprecht@sap.com
	name = Holger Rupprecht
[core]
   pager = less -XMRSI
   editor = vim --nofork
   autocrlf = input
	excludesfile = /etc/gitignore

[color]
   ui = auto
	diff = auto
	branch = auto
	interactive = true

[color "status"]
   added = green
   changed = yellow
   untracked = red

[grep]
   lineNumber = true
   patternType = perl

[alias]
   h = help
   d = diff --patience
   st = status -bs
   ci = commit
   br = branch
   co = checkout
   cp = cherry-pick
   hist = log --graph --pretty=format:\"%Cred%h%Creset %C(yellow)%ad%Creset %C(green)%an%Creset%C(magenta)%d%Creset %s\" --date=short
   type = cat-file -t
   dump = cat-file -p
   last = log -1 -p
   todo = grep -n -E "'#+ *TODO'"
   root = rev-parse --show-toplevel
   ctags = !.git/hooks/ctags
   reset1 = reset HEAD^
   timeline = log --oneline --graph --decorate

   ours = "!f() { git checkout --ours $@ && git add $@; }; f"
   theirs = "!f() { git checkout --theirs $@ && git add $@; }; f"
   build = ship
   cl = ship
   start = ship

[diff]
   renames = copy
   algorithm = patience

[push]
   default = current

[pull]
	rebase = true

[mergetool "vimdiff"]
	cmd = /usr/bin/vim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"

[merge]
   tool = vimdiff

[github]
	user = hrupprecht
